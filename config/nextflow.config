process {
    executor = "slurm"

    withName: bgenToVCF {
        queue = "barc"
        clusterOptions = "--constraint=rhel9"
        cpus = 12
        time = "2h"
        memory = "100G"
        container = null
    }

    withName: cleanVCF {
        queue = "barc"
        clusterOptions = "--constraint=rhel9"
        cpus = 1
        time = "1h"
        memory = "8G"
        container = null
    }

    withName: snpEff {
        queue = "barc"
        clusterOptions = "--constraint=rhel9"
        cpus = 1
        time = "2h"
        memory = "8G"
        container = null
    }
}